---
export interface Props {
    title: string;
    description?: string;
    imageUrl: string;
    elements?: Array<{
        text: string;
    }>;
    id?: string;
}

const { title, description, imageUrl, elements = [], id } = Astro.props;
---

<div class="container mx-auto">
    <div id={id} class="flex flex-col shadow-2xl rounded-xl md:scroll-mt-40 scroll-mt-18 mb-8">
        <div class="bg-gray-100 rounded-t-lg overflow-hidden">
            <img
                src={imageUrl}
                alt={title}
                class="w-full h-48 object-cover"
            />
        </div>
        
        <div class="p-6 bg-white rounded-b-lg">
            <div class="flex items-center mb-4">
                <h2 class="text-xl font-bold text-gray-800">{title}</h2>
            </div>
            <p class="text-gray-600 mb-4 text-sm" set:html={description}>
            </p>

            {
                elements.length > 0 && (
                    <ul class="space-y-2 mb-6 text-sm">
                        {elements.map((element) => (
                            <li class="flex items-start">
                                <img class="w-4 h-4 text-blue-600 mr-2 mt-0.5 flex-shrink-0" src="/images/icons/square-check.svg" />
                                <span class="text-gray-700">{element.text}</span>
                            </li>
                        ))}
                    </ul>
                )
            }
            
            <a href="/contact#formulario-contacto" class="inline-block">
                <button class="w-full px-4 py-2 bg-blue-600 hover:bg-blue-700 rounded text-white font-medium transition-colors">
                    Solicitar presupuesto
                </button>
            </a>
        </div>
    </div>
</div>
