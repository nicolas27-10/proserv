---
interface Props {
	// Define any props you want to pass to the layout
	title: string;
}
const { title } = Astro.props as Props;

import '../styles/global.css'
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '@fontsource-variable/montserrat';
import ClientRouter from 'astro/components/ClientRouter.astro';

---

<!doctype html> 
<html lang="es">
	<head>
		<!-- Básico -->
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="theme-color" content="#0f172a" />
	  
		<!-- Favicon -->
		<link rel="icon" type="image/png" href="/images/logo/favicon.png" />
	  
		<!-- SEO Principal -->
		<title>{title}</title>
		<meta
		  name="description"
		  content="ProServ Chile ofrece servicios profesionales de control de plagas, servicios veterinarios, capacitación, asesorías profesionales y actividades al aire libre."
		/>
		<meta
		  name="keywords"
		  content="control de plagas, sanitización, desratización, fumigación, servicios sanitarios, ProServ Chile, control de plagas Chile, servicios veterinarios, capacitación, asesorías profesionales"
		/>
		<meta name="author" content="ProServ Chile" />
		<meta name="robots" content="index, follow" />
	  
		<!-- Open Graph (Facebook, WhatsApp, LinkedIn) -->
		<meta property="og:type" content="website" />
		<meta property="og:site_name" content="ProServ Chile" />
		<meta property="og:title" content="ProServ Chile | Servicios Profesionales" />
		<meta
		  property="og:description"
		  content="Servicios profesionales de control de plagas, sanitización y soluciones integrales para empresas y hogares en Chile."
		/>
		<meta property="og:url" content="https://proserv-chile.com" />
		<meta
		  property="og:image"
		  content="https://proserv-chile.com/images/logo/favicon.png"
		/>
	  
		<!-- Twitter Cards -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:title" content="ProServ Chile | Servicios Profesionales" />
		<meta
		  name="twitter:description"
		  content="Control de plagas, sanitización y servicios profesionales en Chile."
		/>
		<meta
		  name="twitter:image"
		  content="https://proserv-chile.com/images/logo/favicon.png"
		/>
	  
		<!-- Canonical -->
		<link rel="canonical" href="https://proserv-chile.com" />
	  
		<!-- Astro Router -->
		<ClientRouter />
	  </head>
	<!-- <body class="scroll-smooth">
		<Header/>
		<slot />
		<Footer/>
	</body> -->

	<body class="scroll-smooth font-montserrat min-h-screen grid grid-rows-[auto_1fr_auto]">
		<Header />
		<main class="min-h-0 md:mt-16 mt-12">
			<slot />
		</main>
		<Footer />
		<a href="https://wa.me/56956484233" target="_blank" class="fixed md:bottom-8 md:right-8 bottom-6 right-4 z-50 flex flex-col items-center justify-center gap-2">
			<img src="/images/icons/rrss/whatsapp.svg" alt="whatsapp" class="md:h-20 h-12 hover:scale-110 transition-all duration-300 hover:rotate-12">
			<span class="text-black md:text-sm text-xs font-bold bg-white rounded-full md:px-4 px-2 py-1">¡Contactanos!</span>
		</a>
	</body>
</html>

<style>
	body {
  		font-family: 'Montserrat Variable', sans-serif;
	}
</style>
