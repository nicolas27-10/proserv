---
interface Props {
	// Define any props you want to pass to the layout
	title: string;
}
const { title } = Astro.props as Props;

import '../styles/global.css'
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '@fontsource-variable/montserrat';
import ClientRouter from 'astro/components/ClientRouter.astro';

---

<!doctype html> 
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="images/logo/favicon.png" />
		<title>{title}</title>
		<ClientRouter />
	</head>
	<!-- <body class="scroll-smooth">
		<Header/>
		<slot />
		<Footer/>
	</body> -->

	<body class="scroll-smooth font-montserrat min-h-screen grid grid-rows-[auto_1fr_auto]">
    <Header />
    <main class="min-h-0 md:mt-16 mt-12">
        <slot />
    </main>
    <Footer />
</body>
</html>

<style>
	body {
  		font-family: 'Montserrat Variable', sans-serif;
	}
</style>
